<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/button_offline_match_selector"
        android:gravity="center"
        android:onClick="startQuickOfflineMatch" />

    <Button
        android:id="@+id/start_quick_match_button"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:background="@drawable/button_online_match_selector"
        android:gravity="center"
        android:onClick="startQuickMatch" />

</RelativeLayout>