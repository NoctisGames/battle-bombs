<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.technegames.battlebombs"
    android:versionCode="1"
    android:versionName="0.1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:glEsVersion="0x00010000"
        android:required="true" />

    <application
        android:name="com.technegames.battlebombs.BattleBombsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.technegames.battlebombs.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.technegames.battlebombs.GameActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.technegames.battlebombs.OfflineGameActivity"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>